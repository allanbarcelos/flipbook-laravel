container_commands:
  01-updateComposer:
    command: export COMPOSER_HOME=/root && /usr/bin/composer.phar self-update
  02-createEnvFile:
    command: touch .env
option_settings:
  "aws:elasticbeanstalk:container:php:phpini":
    document_root: /public
    memory_limit: 512M
  "aws:elasticbeanstalk:application:environment":
    COMPOSER_HOME: /root
    APP_NAME: FlipBook
    APP_ENV: development
